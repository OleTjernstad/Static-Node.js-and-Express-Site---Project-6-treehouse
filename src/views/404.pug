<!DOCTYPE html>
html(lang="en" dir="ltr")
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title 404
    
    style(type='text/css').
        html, body {
            height: 100%;
        }
        body {
            margin: 0;
        }
        .parent {
            height: 100%;
            padding: 0;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: row;
            flex-wrap: wrap;
        }
        .div-item {
            margin: 5px;
            text-align: center;
            height: 30rem;
            align-items: center;
            justify-content: center;
            display: flex;
            flex-direction: column;
        }
        img {
            max-height: 30rem;
            max-width: 30rem;
        }
        @media screen and (max-width: 600px) {
            img {
                max-height: 15rem;
                max-width: 15rem;
            }
            .div-item {
                height: 10rem;
            }
        }

  body
    .parent
